{
  "name": "dr-it-claudesdksetup",
  "version": "1.0.0",
  "description": "Comprehensive setup for Claude SDK, MCP services, and development environment",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "verify": "bash scripts/verify-installation.sh",
    "verify:toolchain": "bash scripts/verify-toolchain.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/angelor888/DR-IT-ClaudeSDKSetup.git"
  },
  "keywords": [
    "claude",
    "sdk",
    "mcp",
    "automation",
    "setup"
  ],
  "author": "DuetRight IT Team",
  "license": "PROPRIETARY",
  "bugs": {
    "url": "https://github.com/angelor888/DR-IT-ClaudeSDKSetup/issues"
  },
  "homepage": "https://github.com/angelor888/DR-IT-ClaudeSDKSetup#readme",
  "devDependencies": {
    "jest": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "sdk-examples/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}